root = true

# Global
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# C source code
[*.c]
ident_style = space
ident_size = 4

# C header files
[*.h]
ident_style = space
ident_size = 4

# Makefile
[Makefile]
indent_style = tab